<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.larz.dom3.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="org.larz.dom3.Perspective"
            id="org.larz.dom3.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.larz.dom3.application"
            name="Dom3 Editor">
         <property
               name="windowImages"
               value="icons/alt_window_16.png,icons/alt_window_32.png">
         </property>
         <property
               name="appName"
               value="Dom3 Editor">
         </property>
      </product>
   </extension>
   <extension point="org.eclipse.ui.editors">
      <editor
            class="org.larz.dom3.editor.DmEditor"
            default="true"
            extensions="dm"
            icon="icons/alt_window_16.png"
            id="org.larz.dom3.editor.DmEditor"
            name="Dm Editor">
      </editor>
   </extension>
	<extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.larz.dom3.ActionWiper">
      </startup>
   </extension>

</plugin>
